{
  "include": [
    "/usr/share/sway/templates/waybar/config.jsonc"
  ],
  "height": 30,
  "spacing": 0,
  "layer": "top",
  "modules-left": [
    "sway/workspaces",
    "custom/scratchpad"
  ],
  "modules-center": [
    "clock",
    "custom/notification",
    "custom/github",
    "custom/wf-recorder",
    "sway/mode",
    "custom/mail",
    "custom/systemd",
    "custom/security",
    "custom/progress"
  ],
  "modules-right": [
    "network",
    "bluetooth",
    "memory",
    "cpu",
    "temperature",
    "pulseaudio",
    "custom/playerctl",
    "custom/adaptive-light",
    "custom/sunset",
    "tray",
    "battery"
  ],
  "bluetooth": {
    "format-on": "󰂯",
    "format-off": "󰂲",
  },
  "custom/systemd": {
    "exec": "waybar-systemd",
    "return-type": "json",
    "interval": 10
  },
  "network": {
    "format": "{ifname}",
    "format-wifi": "  ({signalStrength}%)",
    "format-ethernet": "󰈀",
    "format-disconnected": "",
    "tooltip-format-disconnected": "{icon} disconnected",
    "tooltip-format-disabled": "{icon} disabled",
    "tooltip-format": "{ifname} via {gwaddr} ",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) ",
    "tooltip-format-ethernet": "{ipaddr}/{cidr} ",
    "on-click": "swaymsg exec XDG_CURRENT_DESKTOP=GNOME gnome-control-center"
  },
  "tray": {
    "icon-size": 14,
    "spacing": 0
  },
  "clock": {
    "format": "{:%e.%b %H:%M}",
    "on-click": "gnome-calendar"
  },
  "cpu": {
    "format": "󰘚 {usage:2}%",
    "on-click": "swaymsg exec \\$once \\$term_fullscreen btop"
  },
  "memory": {
    "format": "󰍛 {percentage:2}%",
    "on-click": "swaymsg exec \\$once \\$term_fullscreen btop"
  },
  "battery": {
    "on-click": "cpupower-gui",
    "bat": "BAT0",
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-charging": " {capacity}%",
    "format-plugged": " {capacity}%",
    "format-alt": "{time} {icon}",
    "format-icons": [
      " ",
      " ",
      " ",
      " ",
      " "
    ]
  },
  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "<span foreground='red'><sup></sup></span>",
      "none": "",
      "dnd-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-none": "",
      "inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "inhibited-none": "",
      "dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-inhibited-none": ""
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  }
}
