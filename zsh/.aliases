# Easier navigation: .., ..., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias -- -="cd -"

alias mv="mv -iv"
alias cp="cp -riv"
alias mkdir="mkdir -vp"

alias vim=nvim
alias vi=nvim
alias v=nvim

alias g="git"
